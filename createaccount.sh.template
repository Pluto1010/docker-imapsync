docker run --rm \
  -e MAIL_USER=foo@example.com \
  -e MAIL_PASS=abc \
  -ti tvial/docker-mailserver:v2 \
  /bin/sh -c 'echo "$MAIL_USER|$(doveadm pw -s SHA512-CRYPT -u $MAIL_USER -p $MAIL_PASS)"' >> config/postfix-accounts.cf

  docker run --rm \
    -v "$(pwd)/config":/tmp/docker-mailserver \
